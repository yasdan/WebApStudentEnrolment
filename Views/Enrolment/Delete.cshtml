@model WebApStudentEnrolment.Models.Enrolment
    @{
    ViewData["Title"] = "Enrolments";
}

<h1>Delete Enrolment</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group accept-policy mb-3">
                <label asp-for="StudentId" class="control-label"></label>
                <input asp-for="StudentId" class="form-control" readonly />
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CourseId" class="control-label"></label>
                <input asp-for="CourseId" class="form-control" readonly />
                <span asp-validation-for="CourseId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="EnrolmentDate" class="control-label"></label>
                <input asp-for="EnrolmentDate" class="form-control" type="datetime-local" readonly />
                <span asp-validation-for="EnrolmentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p>Are you sure you want to delete this enrolment?</p>
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


